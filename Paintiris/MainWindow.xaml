<Window x:Class="Paintiris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paintiris"
        mc:Ignorable="d"
              Title="Paintiris" Height="800" Width="1500" WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="800" FontFamily="Verdana" >

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition/>
            <RowDefinition Height="27.04"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Name="gr_menu">
            <TabControl Name="tc_menuPestanhas" Background="MistyRose" Style="{DynamicResource TabControlStyle1}">
                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Archivo" Name="ti_archivo">
                    <Grid Background="MistyRose">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="41*"/>
                            <ColumnDefinition Width="706*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnNuevo" Style="{DynamicResource ButtonStyle1}" Content="Nuevo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Archivo_Click" Height="39" Width="82" Grid.ColumnSpan="2"/>
                        <Button x:Name="btnGuardar" Style="{DynamicResource ButtonStyle1}" Content="Guardar" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top" Click="Archivo_Click" Height="39" Width="82" Grid.Column="1"/>
                        <Button x:Name="btnAbrir" Style="{DynamicResource ButtonStyle1}" Content="Abrir" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top" Click="Archivo_Click" Height="39" Width="82" Grid.Column="1"/>
                    </Grid>
                </TabItem>
                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Inicio" Name="ti_inicio">
                    <Grid Background="MistyRose">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="31*"/>
                            <ColumnDefinition Width="1463*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btn_dibujar" Content="Dibujar" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Click="HerramientasDibujo_Click" Grid.ColumnSpan="2"/>
                        <Button x:Name="btn_borrar" Content="Borrar" HorizontalAlignment="Left" Margin="49,20,0,0" VerticalAlignment="Top" Click="HerramientasDibujo_Click" Grid.Column="1"/>
                        <Button x:Name="btn_seleccionar" Content="Seleccionar" HorizontalAlignment="Left" Margin="99,20,0,0" VerticalAlignment="Top" Click="HerramientasDibujo_Click" Grid.Column="1"/>
                        <Canvas x:Name="cv_colorPintar" Grid.Column="1" Width="40" Height="40" Background="White" HorizontalAlignment="Left" Margin="200,5,0,0" MouseDown="Canvas_MouseDown"/>
                        
                    </Grid>
                </TabItem>
                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Estudio" Name="ti_estudio">
                    <Grid Background="MistyRose"/>
                </TabItem>
                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Ver" Name="ti_ver">
                    <Grid Background="MistyRose"/>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid Grid.Row="1" Name="gr_folio" Background="Gainsboro">
            <InkCanvas  x:Name="lienzoPorDefecto" Width="1298" Height="616" Background="MistyRose" />
        </Grid>
        <Grid Grid.Row="2" Name="gr_menuInferior" Background="RosyBrown">
            <Label x:Name="lblInfo" Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
