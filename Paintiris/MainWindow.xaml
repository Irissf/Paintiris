<Window x:Class="Paintiris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paintiris"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
              Title="Paintiris" Height="800" Width="1500" WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="800" FontFamily="Verdana" >

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition/>
            <RowDefinition Height="27.04"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Name="gr_menu">
            <!--TabControl es el menu de pestañas que trae por defecto wpf, le cambiamos el estilo mediante un diccionario de estilo
            para que se ajuste mejor al diseño de nuestro programa-->
            <TabControl Name="tc_menuPestanhas" Background="MistyRose" Style="{DynamicResource TabControlStyle1}" Grid.ColumnSpan="2">

                <!--El primer apartado, donde se encuentras los comandos básicos como abrir, guardar y guardar como
                le aplicamos otro diccionario de estilo para cada tabIten, que son las separaciones del TabControl-->
                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Archivo" Name="ti_archivo">
                    <Grid Background="MistyRose">

                        <!--Usamos de las fuente https://fontawesome.com/ con su repositorio de iconos
                            Para que funcione tenemos que añadir xmlns:fa="http://schemas.fontawesome.io/icons/" a nuestro proyecto
                            y haberlo instalado en el administador de paquetes Nuget en nuestro proyecto-->
                        <Button x:Name="btnNuevo" ToolTip="Nuevo" Style="{DynamicResource ButtonStyle1}" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Center" Click="Archivo_Click" Height="35" Width="35" >
                            <fa:ImageAwesome Icon="file" Width="30" Height="30" ></fa:ImageAwesome>
                        </Button>

                        <Button x:Name="btnGuardar" ToolTip="Guardar" Style="{DynamicResource ButtonStyle1}" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Center" Click="Archivo_Click" Height="40" Width="40">
                            <fa:ImageAwesome Icon="Save" Width="30" Height="30" ></fa:ImageAwesome>
                        </Button>

                        <Button x:Name="btnAbrir" ToolTip="Cargar" Style="{DynamicResource ButtonStyle1}" HorizontalAlignment="Left" Margin="200,0,0,0" VerticalAlignment="Center" Click="Archivo_Click" Height="40" Width="40">
                            <fa:ImageAwesome Icon="FolderOpen" Width="30" Height="30" ></fa:ImageAwesome>
                        </Button>
                        <Button Content="Bse datos prueba" HorizontalAlignment="Left" Margin="872,36,0,0" VerticalAlignment="Top" Click="Button_Click"/>

                    </Grid>
                </TabItem>

                <!--El segundo item del tabcontrol es para la gestión de los pinceles, utilizamos ToggleButton para que se quede presionado
                el componente que eligen, y lo gestionamos imitando a un radiobutton-->
                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Inicio" Name="ti_inicio" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Width="45">
                    <Grid Background="MistyRose">

                        <!--Lápiz o pincel, que es para escritura, el alto/2-->
                        <ToggleButton x:Name="tbtn_lapiz" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Height="30" Width="30" Checked="pincelOlapiz_Checked">
                            <fa:ImageAwesome Icon="Pencil" Width="13" Height="13" ></fa:ImageAwesome>
                        </ToggleButton>
                        <ToggleButton x:Name="tbtn_pincel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0" Height="30" Width="30" Checked="pincelOlapiz_Checked">
                            <fa:ImageAwesome Icon="PaintBrush" Width="13" Height="13" ></fa:ImageAwesome>
                        </ToggleButton>

                        <!-- ****************************** Gestión de los tamaños del pincel *************************************-->
                        <ToggleButton x:Name="tbtn_pincel1px"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,15,0,0" Height="20" Width="20" Checked="pintar_checked" Tag="1" IsEnabled="false">
                            <fa:ImageAwesome Icon="Circle" Width="1" Height="1" ></fa:ImageAwesome>
                        </ToggleButton>
                        <ToggleButton x:Name="tbtn_pincel3px" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,15,0,0" Height="20" Width="20" Checked="pintar_checked" Tag="3" IsEnabled="false">
                            <fa:ImageAwesome Icon="Circle" Width="3" Height="3" ></fa:ImageAwesome>
                        </ToggleButton>
                        <ToggleButton x:Name="tbtn_pincel6px" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,15,0,0" Height="20" Width="20" Checked="pintar_checked" Tag="6" IsEnabled="false">
                            <fa:ImageAwesome Icon="Circle" Width="6" Height="6" ></fa:ImageAwesome>
                        </ToggleButton>
                        <ToggleButton x:Name="tbtn_pincel10px" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,15,0,0" Height="20" Width="20" Checked="pintar_checked" Tag="10" IsEnabled="false">
                            <fa:ImageAwesome Icon="Circle" Width="10" Height="10" ></fa:ImageAwesome>
                        </ToggleButton>
                        <ToggleButton x:Name="tbtn_pincel13px" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,15,0,0" Height="20" Width="20" Checked="pintar_checked" Tag="13" IsEnabled="false">
                            <fa:ImageAwesome Icon="Circle" Width="13" Height="13" ></fa:ImageAwesome>
                        </ToggleButton>
                        <TextBox HorizontalAlignment="Left" Margin="80,40,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" Height="20" FontSize="15"/>
                        <Label Content="px" HorizontalAlignment="Left" Margin="120,40,0,0" VerticalAlignment="Top"/>
                        <Rectangle Fill="RosyBrown" Width="2" HorizontalAlignment="Left" Margin="180,0,0,0"></Rectangle>

                        <!--Prueba-->
                        <ToggleButton x:Name = "tbtn_selec" Content="selec"  HorizontalAlignment="Left" Width="82" Margin="880,0,0,0" Height="39" RenderTransformOrigin="0.5,0.463"  Checked="tbs_Checked"/>

                        <!-- ****************************** Gestión de los colores *************************************-->
                        <Rectangle x:Name="paletaBasico1" Width="40" Height="40" HorizontalAlignment="Left" Margin="200,0,0,20" Fill="White" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paletaBasico2" Width="40" Height="40" HorizontalAlignment="Left" Margin="220,20,0,0" Fill="Black" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>


                        <Rectangle x:Name="paleta1" Width="20" Height="20" HorizontalAlignment="Left" Margin="280,0,0,30" Fill="#c16359" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paleta2" Width="20" Height="20" HorizontalAlignment="Left" Margin="310,0,0,30" Fill="#48cbf7" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paleta3" Width="20" Height="20" HorizontalAlignment="Left" Margin="340,0,0,30" Fill="#838ac1" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paleta4" Width="20" Height="20" HorizontalAlignment="Left" Margin="370,0,0,30" Fill="#f44b48" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paleta5" Width="20" Height="20" HorizontalAlignment="Left" Margin="400,0,0,30" Fill="#d47d3a" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paleta6" Width="20" Height="20" HorizontalAlignment="Left" Margin="430,0,0,30" Fill="#369c52" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>


                        <Rectangle x:Name="paleta7" Width="20" Height="20" HorizontalAlignment="Left" Margin="280,30,0,0" Fill="#b87296" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paleta8" Width="20" Height="20" HorizontalAlignment="Left" Margin="310,30,0,0" Fill="#f39438" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paleta9" Width="20" Height="20" HorizontalAlignment="Left" Margin="340,30,0,0" Fill="#0497da" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paleta10" Width="20" Height="20" HorizontalAlignment="Left" Margin="370,30,0,0" Fill="#a2d167" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paleta11" Width="20" Height="20" HorizontalAlignment="Left" Margin="400,30,0,0" Fill="#ed3a8c" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown"/>
                        <Rectangle x:Name="paleta12" Width="20" Height="20" HorizontalAlignment="Left" Margin="430,30,0,0" Fill="#fdf45b" MouseRightButtonDown="CambioColor_MouseDown" MouseLeftButtonDown="ElegirColor_MouseLeftButtonDown" />
                        <ComboBox x:Name="cb_palette" Width="100" Height="20" HorizontalAlignment="Left" Margin="480,0,0,0">
                        </ComboBox>

                        <Rectangle Fill="RosyBrown" Width="2" HorizontalAlignment="Left" Margin="600,0,0,0"></Rectangle>

                        <!-- ****************************** Zona de goma *************************************-->

                        <ToggleButton x:Name="tbtn_goma1px"  HorizontalAlignment="Left"  Margin="660,0,0,0" Height="20" Width="20" Checked="pintar_checked" Tag="1" IsEnabled="false">
                            <fa:ImageAwesome Icon="Circle" Width="1" Height="1" ></fa:ImageAwesome>
                        </ToggleButton>
                        <ToggleButton x:Name="tbtn_goma3px" HorizontalAlignment="Left"  Margin="680,0,0,0" Height="20" Width="20" Checked="pintar_checked" Tag="3" IsEnabled="false">
                            <fa:ImageAwesome Icon="Circle" Width="3" Height="3" ></fa:ImageAwesome>
                        </ToggleButton>
                        <ToggleButton x:Name="tbtn_gomal6px" HorizontalAlignment="Left"  Margin="700,0,0,0" Height="20" Width="20" Checked="pintar_checked" Tag="6" IsEnabled="false">
                            <fa:ImageAwesome Icon="Circle" Width="6" Height="6" ></fa:ImageAwesome>
                        </ToggleButton>
                        <ToggleButton x:Name="tbtn_goma10px" HorizontalAlignment="Left" Margin="720,0,0,0" Height="20" Width="20" Checked="pintar_checked" Tag="10" IsEnabled="false">
                            <fa:ImageAwesome Icon="Circle" Width="10" Height="10" ></fa:ImageAwesome>
                        </ToggleButton>
                        <ToggleButton x:Name="tbtn_goma13px" HorizontalAlignment="Left" Margin="740,0,0,0" Height="20" Width="20" Checked="pintar_checked" Tag="13" IsEnabled="false">
                            <fa:ImageAwesome Icon="Circle" Width="13" Height="13" ></fa:ImageAwesome>
                        </ToggleButton>
                        <TextBox HorizontalAlignment="Left" Margin="780,0,0,0" Text="TextBox" TextWrapping="Wrap" Width="40" Height="20" FontSize="15"/>

                        <!--Icono de la goma-->
                        <ToggleButton x:Name="tbtn_borrar" HorizontalAlignment="Left" Margin="620,0,0,0" Height="30" Width="30" Checked="tbs_Checked">
                            <fa:ImageAwesome Icon="Eraser" Width="13" Height="13" ></fa:ImageAwesome>
                        </ToggleButton>
                        <Rectangle Fill="RosyBrown" Width="2" HorizontalAlignment="Left" Margin="850,0,0,0"/>

                    </Grid>
                </TabItem>

                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Estudio" Name="ti_estudio">
                    <Grid Background="MistyRose"/>
                </TabItem>

                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Ver" Name="ti_ver">
                    <Grid Background="MistyRose"/>
                </TabItem>

            </TabControl>
        </Grid>

        <Grid Grid.Row="1" Name="gr_folio" Background="Gainsboro">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <InkCanvas x:Name="lienzoPorDefecto" Width="1200" Height="600" Background="White" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ScrollViewer>


        </Grid>

        <Grid Grid.Row="2" Name="gr_menuInferior" Background="RosyBrown">
            <Label x:Name="lblInfo" Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
