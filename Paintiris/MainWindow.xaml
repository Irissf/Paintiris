<Window x:Class="Paintiris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paintiris"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
              Title="Paintiris" Height="800" Width="1500" WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="800" FontFamily="Verdana" >

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition/>
            <RowDefinition Height="27.04"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Name="gr_menu">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28*"/>
                <ColumnDefinition Width="97*"/>
            </Grid.ColumnDefinitions>
            <TabControl Name="tc_menuPestanhas" Background="MistyRose" Style="{DynamicResource TabControlStyle1}" Grid.ColumnSpan="2">
                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Archivo" Name="ti_archivo">
                    <Grid Background="MistyRose">
                        <!--SI no tiene el nombre la imagen del botón, a la hora de compilar no aparece, a parte le ponemos a la imagen como acción de compilación: recurso-->
                        <Button x:Name="btnNuevo" ToolTip="Nuevo" Style="{DynamicResource ButtonStyle1}" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Center" Click="Archivo_Click" Height="35" Width="35" >
                            <!--Usamos de las fuente https://fontawesome.com/ con su repositorio de iconos
                            Para que funcione tenemos que añadir xmlns:fa="http://schemas.fontawesome.io/icons/" a nuestro proyecto
                            y haberlo instalado en el administador de paquetes Nuget en nuestro proyecto-->
                            <fa:ImageAwesome Icon="file" Width="30" Height="30" ></fa:ImageAwesome>
                        </Button>
                        <Button x:Name="btnGuardar" ToolTip="Guardar" Style="{DynamicResource ButtonStyle1}" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Center" Click="Archivo_Click" Height="40" Width="40">
                            <fa:ImageAwesome Icon="Save" Width="30" Height="30" ></fa:ImageAwesome>
                        </Button>
                        <Button x:Name="btnAbrir" ToolTip="Cargar" Style="{DynamicResource ButtonStyle1}" HorizontalAlignment="Left" Margin="200,0,0,0" VerticalAlignment="Center" Click="Archivo_Click" Height="40" Width="40">
                            <fa:ImageAwesome Icon="FolderOpen" Width="30" Height="30" ></fa:ImageAwesome>
                        </Button> 
                    </Grid>
                </TabItem>
                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Inicio" Name="ti_inicio" Height="19" VerticalAlignment="Center" HorizontalAlignment="Right" Width="45">
                    <Grid Background="MistyRose">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="31*"/>
                            <ColumnDefinition Width="1463*"/>
                        </Grid.ColumnDefinitions>
                        <Canvas x:Name="cv_colorPintar" Grid.Column="1" Width="40" Height="40" HorizontalAlignment="Left" Margin="200,5,0,0" MouseDown="Canvas_MouseDown"/>
                        <ToggleButton x:Name = "tbtn_pintar" Content="pintar" HorizontalAlignment="Left" Width="82" Margin="314,17,0,17" Height="39" RenderTransformOrigin="0.5,0.463" Grid.Column="1" Checked="tbs_Checked"/>
                        <ToggleButton x:Name = "tbtn_borrar" Content="borrar"  HorizontalAlignment="Left" Width="82" Margin="423,17,0,17" Height="39" RenderTransformOrigin="0.5,0.463" Grid.Column="1" Checked="tbs_Checked"/>
                        <ToggleButton x:Name = "tbtn_selec" Content="selec"  HorizontalAlignment="Left" Width="82" Margin="529,19,0,15" Height="39" RenderTransformOrigin="0.5,0.463" Grid.Column="1" Checked="tbs_Checked"/>

                    </Grid>
                </TabItem>
                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Estudio" Name="ti_estudio">
                    <Grid Background="MistyRose"/>
                </TabItem>
                <TabItem Style="{DynamicResource TabItemStyle1}" Header="Ver" Name="ti_ver">
                    <Grid Background="MistyRose"/>
                </TabItem>
            </TabControl>
        </Grid>

        <Grid Grid.Row="1" Name="gr_folio" Background="Gainsboro">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <InkCanvas x:Name="lienzoPorDefecto" Width="1200" Height="600" Background="White" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ScrollViewer>
            

        </Grid>
        <Grid Grid.Row="2" Name="gr_menuInferior" Background="RosyBrown">
            <Label x:Name="lblInfo" Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
